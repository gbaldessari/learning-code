<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="info" >
    <Appenders>
	    <File name="fout" fileName="registros/transacciones.log" append="false">
	        <PatternLayout>
	            <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n</Pattern>
	        </PatternLayout>
	    </File>
	</Appenders>
	<Loggers> 
	    <Root level="INFO">
		    <AppenderRef ref="fout" />
		</Root>
	</Loggers>
</Configuration>





